
<section>
  <div class="pcoded-content">
    <div class="mx-2">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each userdetails}}
            <tr>

              <td>{{this.Name}}</td>
              <td>{{this.Email}}</td>

              {{#if blocked}}
                <td>Inactive</td>
              {{else}}
                <td>Active</td>
              {{/if}}

              {{#if blocked}}
                <td><a
                    href="/admin/unblock-user/{{this._id}}"
                    class="btn btn-success"
                  >Unblock</a></td>
              {{else}}
                <td><a
                    href="/admin/block-user/{{this._id}}"
                    class="btn btn-danger"
                    onclick="return confirm ('Are you sure to Block {{this.Name}}?')"
                  >Block</a></td>
              {{/if}}
            </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</section>