<section>
  <div class="pcoded-content">
    <div class="mx-4">
      <div class="mx-5">
        <div class="d-flex flex-row-reverse">
          <a href="/admin/add-category" class="btn btn-success mt-5">Add
            Category</a>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Category Name</th>
              <th scope="col">Options</th>
            </tr>
          </thead>
          <tbody>
            {{#each catDetails}}
              <tr>
                <td>{{this.category}}</td>

                <td>
                  <a
                    href="/admin/delete-category/{{this._id}}"
                    class="btn btn-danger"
                    onclick="return confirm('Are you sure to delete the category {{this.category}}?')"
                  >Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

