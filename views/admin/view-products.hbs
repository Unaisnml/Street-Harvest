<section>
  <div class="pcoded-content">
    <div class="mx-2">

      <div class="d-flex flex-row-reverse">
        <a href="/admin/add-product" class="btn btn-success mt-5">Add Product</a>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Sl.No</th>
            <th scope="col">Name</th>
            <th scope="col">Category </th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>

          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>
              <td>{{inc @index}}</td>
              <td>{{this.Name}}</td>
              <td>{{this.Category}}</td>
              <td>{{this.Description}}</td>
              <td>â‚¹{{this.Price}}</td>
              <td><img
                  src="/product-images/{{this._id}}.jpg"
                  style="width: 60px; height: 60px; "
                  alt=""
                /></td>
              <td>
                <a
                  href="/admin/edit-product/{{this._id}}"
                  class="btn btn-primary"
                >Edit</a>
                <a
                  href="/admin/delete-product/{{this._id}}"
                  class="btn btn-danger"
                  onclick="return confirm ('Are you sure to delete {{this.Name}} ?')"
                >Delete</a>
              </td>
            </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</section>