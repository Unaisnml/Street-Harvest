<section>
    <div class="container ">
        <div class="row">
            {{#each catProducts }}

            <div class="col-md-3 p-3 d-flex justify-content-around">
                <div class="card mt-4 " style="width: 20rem; height:25rem">
                    <a href="/single-product/{{this._id}}">
                        <img src="product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 14rem;">

                    </a>

                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">â‚¹ {{this.Price}}</p>
                        <p class="card-text">{{this.Description}}</p>

                        {{!-- <i class="fas fa-camera fa-9x"></i> --}}
                        <button onclick="addtoWishList('{{this._id}}')" class=" bi-cart-fill btn btn-warning"
                         style="font-size: 10px">Add Wishlist</button>
                        <button onclick="addToCart('{{this._id}}')" class=" bi-cart-fill btn btn-success"
                            style='font-size:10px '> Add to Cart</button>


                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>


