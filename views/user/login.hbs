<section class="vh-100" style="background-color: #f8e58e;">
  <div class="container py-2 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Login here</h3>
            <form action="/userLogin" method="post">
              <div class="form-outline mb-2">
                <input
                  type="email"
                  id="typeEmailX-2"
                  name="Email"
                  class="form-control form-control-lg"
                  placeholder="Email"
                  required
                />
                <label class="form-label" for="typeEmailX-2"></label>
              </div>

              <div class="form-outline mb-1">
                <input
                  type="password"
                  id="typePasswordX-2"
                  name="Password"
                  class="form-control form-control-lg"
                  placeholder="Password"
                  required
                />
                <label class="form-label" for="typePasswordX-2"></label>
              </div>

              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-start mb-1">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="form1Example3"
                />
                <label class="form-check-label" for="form1Example3">
                  Remember password
                </label>
              </div>

              <button
                class="btn btn-success btn-lg btn-block"
                type="submit"
              >Login</button>
              <div>
                {{#if loginerr}}
                  <p class="text-danger">Invalid Email or password</p>
                {{/if}}
              </div>
              <hr class="my-4" />
              <div
                class="d-flex align-items-center justify-content-center pb-4"
              >
                <p class="mb-0 me-2">Don't have an account?</p>
                <a href="/userSignup" class="mx-1">Create new</a>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>