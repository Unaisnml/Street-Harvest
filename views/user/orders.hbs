<section>
  <div class="mt-3">
    <div class="mx-2">

      {{! need }}
      <div class="d-flex justify-content-center"><h4>Orders</h4></div>
      <table class="table table-bordered">
        <thead class="thead-danger">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Date</th>
            <th scope="col">Address</th>
            <th scope="col">Pincode </th>
            <th scope="col">Mobile</th>
            <th scope="col">Amount</th>
            <th scope="col">Payement</th>
            <th scope="col">Status</th>
            <th scope="col">View</th>
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
            <tr>
              <td>{{inc @index}}</td>
              <td>{{this.date}}</td>
              <td>{{this.deliveryDetails.address}}</td>
              <td>{{this.deliveryDetails.pincode}}</td>
              <td>{{this.deliveryDetails.mobile}}</td>
              <td>â‚¹{{this.totalAmount}}</td>
              <td>{{this.payementMethod}}</td>
              <td>{{this.status}}</td>
              <td>
                <a
                  href="/view-order-products/{{this._id}}"
                  class="btn btn-success"
                >View Products</a>

              </td>
            </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</section>